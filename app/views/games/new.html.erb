<h1> New Game! </h1>

<div id="container">
  <% @letters.each do |letter|%>
  <div class="letter-box">
     <%=letter%>
  </div>
  <%end%>
</div>

<p id="message"> What is the longest word you can find? </p>
<div id="form">
  <form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :game_letters, @letters %>
    <input type="text" name="word" placeholder="Type here..." id="entry-box">
    <input type="submit" value="Play!" id="play-btn">
  </form>
</div>
